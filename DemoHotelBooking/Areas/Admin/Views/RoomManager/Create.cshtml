@model DemoHotelBooking.ViewModels.RoomViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h1>Create</h1>

<h4 class="text-danger">@ViewBag.Error</h4>
<hr />
<div class="container">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <div class="col-md-4 col-lg-6" style="padding: 10px">
                <div class="form-group" style="padding-top: 10px">
                    <label asp-for="ImagePath" class="control-label"></label>
                    <input asp-for="ImagePath" class="form-control" />
                    <span asp-validation-for="ImagePath" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-4 col-lg-3" style="padding: 10px">
                <div class="form-group" style="padding-top: 10px">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group" style="padding-top: 10px">
                    <label asp-for="Type" class="control-label"></label>
                    <input asp-for="Type" class="form-control" />
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>
                <div class="form-group" style="padding-top: 10px">
                    <label asp-for="FloorNumber" class="control-label"></label>
                    <input asp-for="FloorNumber" class="form-control" />
                    <span asp-validation-for="FloorNumber" class="text-danger"></span>
                </div>
                <div class="form-group" style="padding-top: 10px">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group" style="padding-top: 10px">
                    <label asp-for="DAP" class="control-label"></label>
                    <input asp-for="DAP" class="form-control" />
                    <span asp-validation-for="DAP" class="text-danger"></span>
                </div>
                <div class="form-group" style="padding-top: 10px">
                    <label asp-for="MAP" class="control-label"></label>
                    <input asp-for="MAP" class="form-control" />
                    <span asp-validation-for="MAP" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-4 col-lg-3" style="padding: 10px">
                <div class="form-group" style="padding-top: 10px">
                    <label asp-for="Introduce" class="control-label"></label>
                    <textarea asp-for="Introduce" class="form-control" rows="5"></textarea>
                    <span asp-validation-for="Introduce" class="text-danger"></span>
                </div>
                <div class="form-group" style="padding-top: 10px">
                    <label asp-for="Description" class="control-label"></label>
                    <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group" style="padding-top: 10px">
                    <label asp-for="Visio" class="control-label"></label>
                    <textarea asp-for="Visio" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Visio" class="text-danger"></span>
                </div>               
            </div>
            <div class="form-group text-end" style="padding: 10px">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>    
    </form>
</div>
<div>
    <a asp-area="Admin" asp-action="AllRoomList" asp-controller="RoomManager">Back to List</a>
</div>

